@model IEnumerable<TodoTask>
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
}
<div class="col-md-8 offset-2">
    <table class="table">
        <thead>
            <tr class="text-center">
                <th>@Html.DisplayNameFor(x => x.Content)</th>
                <th>@Html.DisplayNameFor(x => x.EndTime)</th>
                <th>@Html.DisplayNameFor(x => x.IsDone)</th>
                <th></th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach(var task in Model)
            {
                <tr>
                    <td class="align-middle">@Html.DisplayFor(x => task.Content)</td>
                    <td class="align-middle">@Html.DisplayFor(x => task.EndTime)</td>
                    <td class="align-middle">@Html.DisplayFor(x => task.IsDone)</td>
                    <td>
                        <a class="btn btn-secondary" asp-action="Details" asp-route-taskId="@task.Id">Details</a>
                    </td>
                    <td>
                        <a class="btn btn-danger" asp-action="Delete" asp-route-taskId="@task.Id">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
<a class="btn btn-primary" asp-action="AddTask">Add new</a>
